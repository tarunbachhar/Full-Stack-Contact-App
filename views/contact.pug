doctype html
html
  head
    // Import Google Icon Font
    link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    // Compiled and minified CSS
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/css/materialize.min.css')
    // Let browser know website is optimized for mobile
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
  body
    .row
      .col.s2
      .col.s8
        h4.center(style='color:#2ca7c9;') Add Contact
        hr
        form(method='post', action='/add')
          .row
            .input-field.col.s6
              i.material-icons.prefix account_circle
              input#first_name.validate(type='text', name='fname')
              label(for='first_name') First Name
            .input-field.col.s6
              i.material-icons.prefix account_circle
              input#last_name.validate(type='text', name='lname')
              label(for='last_name') Last Name
          .row
            .input-field.col.s12
              i.material-icons.prefix phone
              input#mobile.validate(type='number', name='mobile')
              label(for='mobile') Mobile No
          .row
            .input-field.col.s12
              i.material-icons.prefix email
              input#email.validate(type='email', name='email')
              label(for='email') Email
          .row
            .input-field.col.s12
              i.material-icons.prefix add_location
              textarea#address.materialize-textarea(name='address')
              label(for='address') Address
          .center
            button.btn.waves-effect.waves-light.red.darken-1(type='reset', name='action') Reset
            button.btn.waves-effect.waves-light(type='submit', name='action', style='margin-left:10px;') Add
      .col.s2
    // Compiled and minified JavaScript
    script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js')
